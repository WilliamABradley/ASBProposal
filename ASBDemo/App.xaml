<Application
    x:Class="ASBDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASBDemo"
    xmlns:common="using:ASBDemo.Common">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Themes/Theme.xaml" />
                <ResourceDictionary Source="ms-appx:///Themes/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <common:BooleanToVisibilityConverter x:Key="FalseToVisibleConverter" IsReversed="True" />
        </ResourceDictionary>
    </Application.Resources>
</Application>